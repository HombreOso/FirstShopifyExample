:root {
  --wishlist-button-active-color: {{ settings.wishlist_button_active_color | default: '#FF0000' }};
  --wishlist-button-inactive-color: {{ settings.wishlist_button_inactive_color | default: '#000000' }};
}

.button-wishlist {
  position: absolute;
  bottom: 10px;
  right: 10px;
  z-index: 100;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.icon {
  fill: var(--wishlist-button-inactive-color);
  stroke: #000000;
  transition: fill 0.3s ease, stroke 0.3s ease;
}

.button-wishlist.active .icon {
  fill: var(--wishlist-button-active-color);
  stroke: var(--wishlist-button-active-color);
}

/* Wishlist Icon Styling */
.icon-heart {
  width: 24px;
  height: 24px;
  stroke-width: 2;
  fill: none;
  stroke: #000000;
  transition: fill 0.3s ease, stroke 0.3s ease;
}

.button-wishlist.active .icon-heart {
  fill: var(--wishlist-button-active-color);
  stroke: var(--wishlist-button-active-color);
}

.button-wishlist:hover .icon-heart {
  transform: scale(1.1);
  transition: transform 0.2s, fill 0.3s ease, stroke 0.3s ease;
  fill: var(--wishlist-button-active-color) !important;
  stroke: var(--wishlist-button-active-color) !important;
}

.button-wishlist:focus {
  outline: none;
}