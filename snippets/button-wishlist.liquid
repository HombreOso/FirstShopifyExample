{% comment %}
  Shopify Wishlist
  Usage:
    - Markup: {%- render 'button-wishlist', product: product -%}
    - Place this snippet inside your existing product card snippet

  Parameters:
    - product: <Shopify product> (required)
{% endcomment %}
{%- if product.handle != blank -%}
  <button
    type="button"
    aria-label="Add to wishlist"
    class="button-wishlist"
    data-product-handle="{{ product.handle }}"
  >
    <style scoped>
      .button-wishlist {
        position: absolute;
        bottom: 10px;
        right: 10px;
        z-index: 100;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
      }

      .icon {
        fill: transparent;
        stroke: #000000;
        transition: fill 0.3s ease;
      }

      .button-wishlist.active .icon {
        fill: red;
        stroke: #000000;
      }

      /* Wishlist Icon Styling */
      .icon-heart {
        width: 24px;
        height: 24px;
        stroke-width: 2;
        fill: none;
      }

      .button-wishlist:hover .icon-heart {
        transform: scale(1.1);
        transition: transform 0.2s;
      }
    </style>
    {%- render 'icon-heart', class: 'icon icon-heart' -%}
  </button>
{%- endif -%}
